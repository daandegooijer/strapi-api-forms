{
    "kind": "collectionType",
    "collectionName": "forms",
    "info": {
        "singularName": "form",
        "pluralName": "forms",
        "displayName": "form"
    },
    "pluginOptions": {
        "content-manager": {
            "visible": true
        },
        "content-type-builder": {
            "visible": true
        }
    },
    "options": {
        "draftAndPublish": false
    },
    "attributes": {
        "title": {
            "type": "string"
        },
        "successMessage": {
            "type": "string",
            "required": true
        },
        "errorMessage": {
            "type": "string",
            "required": true
        },
        "active": {
            "type": "boolean",
            "default": true
        },
        "dateFrom": {
            "type": "string"
        },
        "dateTill": {
            "type": "string"
        },
        "fields": {
            "type": "json"
        },
        "submissions": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "plugin::api-forms.submission",
            "mappedBy": "form"
        },
        "notifications": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "plugin::api-forms.notification",
            "mappedBy": "form"
        }
    }
}
